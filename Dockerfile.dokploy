# Use the official PHP 8.2 FPM image as base
FROM php:8.2-fpm

# Set working directory to match Dokploy's /app
WORKDIR /app

# Install system dependencies including SQLite
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    unzip \
    sqlite3 \
    supervisor \
    sudo \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath zip pdo_sqlite

# Get latest Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Add www-data to sudoers for artisan commands
RUN echo 'www-data ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers

# Copy existing application directory contents (excluding .dockerignore files)
COPY . /app

# Create necessary directories with correct permissions first
RUN mkdir -p database storage/framework/cache storage/framework/sessions storage/framework/views storage/logs bootstrap/cache

# Copy permissions properly
RUN chown -R www-data:www-data /app

# Change to www-data user
USER www-data

# Install production dependencies
RUN composer install --optimize-autoloader --no-dev --no-progress --no-interaction

# Ensure .env exists and configure for SQLite
RUN if [ -f .env.dokploy ]; then \
        cp .env.dokploy .env; \
    else \
        cp .env.example .env; \
        echo "APP_ENV=production" >> .env; \
        echo "APP_DEBUG=false" >> .env; \
        echo "DB_CONNECTION=sqlite" >> .env; \
    fi && \
    echo "DB_DATABASE=/app/database/database.sqlite" >> .env

# Generate application key
RUN php artisan key:generate --force

# Create SQLite database directory (but not file yet - do it in startup as root)
RUN mkdir -p /app/database

# Clear and cache configurations (without migrations)
RUN php artisan config:clear && php artisan route:clear && php artisan view:clear && php artisan cache:clear

# Optimize for production (sin route:cache por ahora)
RUN php artisan config:cache && php artisan view:cache

# Switch back to root for expose
USER root

# Create startup script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "================================"\n\
echo "ðŸš€ Iniciando Laravel ERP en /app"\n\
echo "================================"\n\
\n\
cd /app\n\
\n\
# 1. SETUP FILESYSTEM\n\
echo "ðŸ“ Configurando permisos del sistema de archivos..."\n\
mkdir -p storage/logs storage/framework/{cache,sessions,views} bootstrap/cache database\n\
chown -R www-data:www-data /app 2>/dev/null || true\n\
chmod -R 755 /app\n\
chmod -R 775 /app/storage /app/bootstrap/cache /app/database\n\
chmod -R 777 /app/database\n\
\n\
# 2. CREATE SQLITE DATABASE\n\
echo "ðŸ—„ï¸  Creando base de datos SQLite..."\n\
if [ ! -f /app/database/database.sqlite ]; then\n\
    echo "   âžœ Creando archivo database.sqlite..."\n\
    sqlite3 /app/database/database.sqlite ".databases"\n\
    chmod 666 /app/database/database.sqlite\n\
else\n\
    echo "   âœ“ Base de datos ya existe"\n\
fi\n\
echo "   $(ls -lh /app/database/database.sqlite)"\n\
\n\
# 3. RUN MIGRATIONS AS WWW-DATA\n\
echo "ðŸ”„ Ejecutando migraciones..."\n\
sudo -u www-data php artisan migrate --force --no-interaction 2>&1 || {\n\
    echo "   âš ï¸  Error en migraciones pero continuando..."\n\
}\n\
\n\
# 4. FIX PERMISSIONS AGAIN AFTER MIGRATIONS\n\
echo "ðŸ” Ajustando permisos finales..."\n\
chmod -R 775 /app/storage /app/bootstrap/cache /app/database\n\
chmod -R 777 /app/database\n\
chmod 666 /app/database/database.sqlite 2>/dev/null || true\n\
\n\
# 5. CLEAR CACHES\n\
echo "ðŸ§¹ Limpiando cachÃ©s..."\n\
sudo -u www-data php artisan cache:clear 2>&1 || echo "   âš ï¸  Error limpiando cache"\n\
\n\
# 6. PREPARE LOGS\n\
echo "ðŸ“ Preparando logs..."\n\
touch /app/storage/logs/laravel.log\n\
chmod 666 /app/storage/logs/laravel.log\n\
\n\
echo ""\n\
echo "================================"\n\
echo "âœ… Laravel iniciado correctamente"\n\
echo "================================"\n\
echo ""\n\
\n\
exec php-fpm\n\
' > /usr/local/bin/start-laravel.sh && chmod +x /usr/local/bin/start-laravel.sh

# Expose port 9000 and start php-fpm server
EXPOSE 9000

CMD ["/usr/local/bin/start-laravel.sh"]